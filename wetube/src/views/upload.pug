extends base.pug



block content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="title", placeholder="Title", maxlength=20, type="text", required)
        input(name="description", placeholder="Description", minlength=5, type="text", required)
        input(name="hashtags", placeholder="Hashtags, separated by comma.", type="text", required)
        input(type="submit", value="Upload Video")